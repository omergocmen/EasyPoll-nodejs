<%- include('./partials/navbar.ejs') %>  
<div class="container-sm" style="width: 50%; margin-top: 120px;">
  <form method="post" action="/home/createPoll">
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Başlık</label>
    <input name="title" type="text" placeholder="Lütfen toplantının başlığını giriniz." class="form-control" id="exampleFormControlInput1">
  </div>
  <div class="mb-3">
    <label for="exampleFormControlInput1" class="form-label">Açıklama</label>
    <input name="description" placeholder="Fonksiyonel" type="text" class="form-control" id="exampleFormControlInput1">
  </div>
  <div class="mb-3">
    <label for="exampleFormControlTextarea1" class="form-label">Lokasyon</label>
    <textarea name="location" placeholder="Fonksiyonel" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
  </div>

<% message.forEach(element => { %>
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <%- element %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
      </div>
<% }) %>
  <div style="width: 20%;justify-content: flex-start;" class="mb-3"><button style="background-color:#FF7B01; border-color:#FF7B01;" class="btn btn-success d-block w-100" type="submit">Devam et</button></div>
</form>
</div>
