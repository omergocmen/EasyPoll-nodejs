<%- include('./partials/navbar.ejs') %>  
<section class="register-photo logIn" style="margin-bottom: 80px;">
    <div class="form-container" style="margin-top: 120px;">
        <div class="image-holder"></div>
        <form method="post">
            <h2 class="text-center"><strong>Giriş Yap</strong></h2>
            <div class="mb-3"><input value="<% if (data && data.email!="") { %><%- data.email %><% } %>"  type="email" class="form-control" name="email" placeholder="Email" /></div>
            <div class="mb-3"><input value="<% if (data && data.password!="") { %><%- data.password %><% } %>"  type="password" class="form-control" name="password" placeholder="Şifre" /></div>
            <% if (locals.message !="") { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%- locals.message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                  </div>
            <% } %>  
            <div class="mb-3"><button class="btn btn-primary d-block w-100" type="submit">Giriş Yap</button></div><a class="already" href="http://localhost:3000/home/users/forgetPassword">Şifreni mi unuttun ? </a>
        </form>
    </div>
</section>
